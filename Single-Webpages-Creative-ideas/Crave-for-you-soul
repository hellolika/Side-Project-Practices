    <script>
        document.addEventListener('DOMContentLoaded', () => {
            
            // --- RADAR CHART LOGIC ---
            const ctxDiscipline = document.getElementById('disciplineChart').getContext('2d');
            const disciplineChart = new Chart(ctxDiscipline, {
                type: 'radar',
                data: {
                    labels: ['Hunger Control', 'Discipline', 'Clarity', 'Willpower', 'Anxiety'],
                    datasets: [{
                        data: [20, 30, 40, 25, 90],
                        fill: true,
                        backgroundColor: 'rgba(31, 41, 55, 0.2)',
                        borderColor: '#1F2937'
                    }]
                },
                options: { maintainAspectRatio: false, scales: { r: { suggestedMin: 0, suggestedMax: 100, ticks: { display: false } } }, plugins: { legend: { display: false } } }
            });

            document.getElementById('disciplineBtn').addEventListener('click', function() {
                const isTrained = this.textContent.includes('Reset');
                disciplineChart.data.datasets[0].data = isTrained ? [20, 30, 40, 25, 90] : [95, 90, 85, 95, 20];
                disciplineChart.data.datasets[0].backgroundColor = isTrained ? 'rgba(31, 41, 55, 0.2)' : 'rgba(192, 160, 98, 0.2)';
                disciplineChart.data.datasets[0].borderColor = isTrained ? '#1F2937' : '#C0A062';
                this.textContent = isTrained ? "Exercise Discipline" : "Reset Discipline";
                disciplineChart.update();
            });

            // --- IDENTITY TOGGLE ---
            document.getElementById('togglePerspective').addEventListener('click', () => {
                const soul = document.getElementById('soulCard');
                const body = document.getElementById('bodyCard');
                if (soul.classList.contains('bg-gray-900')) {
                    soul.className = "bg-gray-100 p-8 rounded-lg border border-gray-200 transition-all duration-500";
                    body.className = "bg-gray-900 p-8 rounded-lg border border-gray-800 text-white shadow-xl transform scale-105";
                } else {
                    body.className = "bg-gray-100 p-8 rounded-lg border border-gray-200 transition-all duration-500";
                    soul.className = "bg-gray-900 p-8 rounded-lg border border-gray-800 text-white shadow-xl transform scale-105";
                }
            });

            // --- ACTION CHART LOGIC ---
            const ctxAction = document.getElementById('actionChart').getContext('2d');
            const actionChart = new Chart(ctxAction, {
                type: 'bar',
                data: {
                    labels: ['Anxiety', 'Freedom'],
                    datasets: [{ data: [85, 15], backgroundColor: ['#1F2937', '#C0A062'] }]
                },
                options: { maintainAspectRatio: false, scales: { y: { max: 100, display: false }, x: { grid: { display: false } } }, plugins: { legend: { display: false } } }
            });

            document.getElementById('takeActionBtn').addEventListener('click', function() {
                const anxiety = actionChart.data.datasets[0].data[0];
                if (anxiety > 10) {
                    const newAnx = anxiety - 25;
                    const newFre = actionChart.data.datasets[0].data[1] + 25;
                    actionChart.data.datasets[0].data = [newAnx, newFre];
                    actionChart.update();
                    document.getElementById('anxietyLevel').textContent = newAnx + "% Anxiety";
                    document.getElementById('freedomLevel').textContent = newFre + "% Freedom";
                    document.getElementById('actionFeedback').classList.replace('opacity-0', 'opacity-100');
                }
            });

            // --- PODCAST PLAYER LOGIC (Simulated) ---
            const playBtn = document.getElementById('playPauseBtn');
            const progress = document.getElementById('audioProgress');
            let isPlaying = false;
            let interval;

            playBtn.addEventListener('click', () => {
                isPlaying = !isPlaying;
                document.getElementById('playIcon').innerHTML = isPlaying ? "&#10074;&#10074;" : "&#9658;";
                
                if (isPlaying) {
                    interval = setInterval(() => {
                        let width = parseFloat(progress.style.width) || 0;
                        if (width < 100) {
                            progress.style.width = (width + 0.5) + "%";
                        } else {
                            clearInterval(interval);
                            isPlaying = false;
                            document.getElementById('playIcon').innerHTML = "&#9658;";
                        }
                    }, 100);
                } else {
                    clearInterval(interval);
                }
            });
        });
    </script>
